            <id>summary</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-antrun-plugin</artifactId>
                        <version>1.8</version>
                        <executions>
                            <execution>
                                <phase>verify</phase>
                                <goals>
                                    <goal>run</goal>
                                </goals>
                                <configuration>
                                    <target>
                                        <path id="task.classpath">
                                            <fileset dir="${project.build.directory}" includes="*.jar"/>
                                        </path>

                                        <taskdef name="xmlFilelist" classname="com.datapps.report.ant.FileListXmlTask"
                                                 classpathref="task.classpath"/>
                                        <xmlFilelist sourceDir="${jmeter.result.jtl.dir}"
                                                     destDir="${jmeter.result.jtl.list.dir}" destFile="summary.xml"/>
                                    </target>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                    <plugin>
                        <!--http://www.mojohaus.org/xml-maven-plugin/examples/transform-saxon.html-->
                        <groupId>org.codehaus.mojo</groupId>
                        <artifactId>xml-maven-plugin</artifactId>
                        <version>1.0-beta-3</version>
                        <executions>
                            <execution>
                                <phase>verify</phase>
                                <goals>
                                    <goal>transform</goal>
                                </goals>
                            </execution>
                        </executions>
                        <configuration>
                            <transformationSets>
                                <transformationSet>
                                    <dir>${jmeter.result.jtl.list.dir}</dir>
                                    <stylesheet>src\test\resources\summary.xsl</stylesheet>
                                    <outputDir>${jmeter.result.html.dir}</outputDir>
                                    <fileMappers>
                                        <fileMapper
                                                implementation="org.codehaus.plexus.components.io.filemappers.FileExtensionMapper">
                                            <targetExtension>html</targetExtension>
                                        </fileMapper>
                                    </fileMappers>
                                </transformationSet>
                            </transformationSets>
                        </configuration>
                        <!-- using XSLT 2.0 -->
                        <dependencies>
                            <dependency>
                                <groupId>net.sf.saxon</groupId>
                                <artifactId>saxon</artifactId>
                                <version>8.7</version>
                            </dependency>
                        </dependencies>
                    </plugin>
                </plugins>
            </build>
        </profile>

        <profile>
            <id>junit</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-antrun-plugin</artifactId>
                        <version>1.8</version>
                        <executions>
                            <execution>
                                <phase>verify</phase>
                                <goals>
                                    <goal>run</goal>
                                </goals>
                                <configuration>
                                    <target>
                                        <path id="task.classpath">
                                            <fileset dir="${project.build.directory}" includes="*.jar"/>
                                        </path>

                                        <taskdef name="junitReport" classname="com.datapps.report.ant.JUnitReportTask"
                                                 classpathref="task.classpath"/>
                                        <junitReport sourceDir="${jmeter.result.jtl.dir}"
                                                     destDir="${jmeter.result.junit.dir}"/>
                                    </target>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>

        <profile>
            <id>smokep</id>
            <properties>
                <jmeter.test.dir>linkoopdb/smokep</jmeter.test.dir>
            </properties>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-antrun-plugin</artifactId>
                        <version>1.8</version>
                        <executions>
                            <execution>
                                <id>prepare-smoke-parallel-jmx</id>
                                <phase>process-resources</phase>
                                <goals>
                                    <goal>run</goal>
                                </goals>
                                <configuration>
                                    <target>
                                        <path id="task.classpath">
                                            <fileset dir="${project.basedir}/lib" includes="xmltask-*.jar"/>
                                        </path>

                                        <taskdef name="xmltask" classname="com.oopsconsultancy.xmltask.ant.XmlTask"
                                                 classpathref="task.classpath"/>
                                        <xmltask source="${smoke.jmx}" dest="${smoke.parallel.jmx}">
                                            <replace
                                                    path="//TestPlan/boolProp[@name='TestPlan.serialize_threadgroups']/text()"
                                                    withText="false"/>
                                        </xmltask>
                                    </target>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>

</project>
