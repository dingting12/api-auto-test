                    <jmeterExtensions>
                        <artifact>com.datapps.linkoop:linkoopdb-jdbc:2.2.0</artifact>
                        <artifact>mysql:mysql-connector-java:5.1.42</artifact>
                        <artifact>dm:dm:1.0</artifact>
